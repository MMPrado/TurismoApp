<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.turismoapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".RiveraActivity"
            android:label="@string/title_Rivera_Maya"
            />
        <activity android:name=".VallartaActivity"
            android:label="@string/title_Puerto_vallarta"
            />
        <activity android:name=".CancunActivity"
            android:label="@string/title_Cancun"
           />
        <activity android:name=".CabosActivity"
            android:label="@string/title_Los_Cabos"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".ActividadPrincipal"
            android:label="@string/title_activity_actividad_principal"
            />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>